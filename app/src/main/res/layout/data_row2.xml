<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="User's Report:"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtReport"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginLeft="7dp"
                android:fontFamily="serif"
                android:text=" Ang pagmamulti-task ay isang malaking bahagi ng buhay ng isang mag-aaral dahil kung natututunan ng isang mag-aaral na gawin ang mga bagay nang sabay-sabay sa maagang edad, magkakaroon ito ng resulta kung saan hindi na magkakaproblema ang mag-aaral sa kahit anong uri o dami ng gawain na kailangang tapusin sa loob ng isang tiyak na panahon. Hindi madali para sa isang mag-aaral na mag-multi-task dahil may mga mag-aaral na hindi kayang gawin ang mga bagay nang sabay-sabay, kaya ang pagmamulti-task ay maaaring makatulong o makasira sa akademikong performance ng isang mag-aaral."
                android:textAlignment="gravity" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>