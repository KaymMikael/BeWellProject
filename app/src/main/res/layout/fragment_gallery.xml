<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.secondpage.GalleryFragment">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="327dp"
        android:layout_height="92dp"
        android:layout_marginTop="48dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="262dp"
        android:layout_height="121dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnMessenger"
            android:layout_width="169dp"
            android:layout_height="66dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/mybutton"
            android:drawableLeft="@drawable/messenger"
            android:text="Messenger"
            android:textSize="12sp"
            app:backgroundTint="#C16FCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnReport"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="169dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/mybutton"
            android:drawableLeft="@drawable/report"
            android:text="Report"
            app:backgroundTint="#C16FCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="169dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/mybutton"
            android:drawableLeft="@drawable/facebook"
            android:text="Facebook"
            app:backgroundTint="#C16FCC"
            app:layout_constraintBottom_toTopOf="@+id/btnReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContact"
            app:layout_constraintVertical_bias="0.381" />

        <Button
            android:id="@+id/btnDiscord"
            android:layout_width="169dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/mybutton"
            android:drawableLeft="@drawable/discord"
            android:text="Discord"
            app:backgroundTint="#C16FCC"
            app:layout_constraintBottom_toTopOf="@+id/btnMessenger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContact"
            app:layout_constraintVertical_bias="0.381" />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:text="Contact us"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>